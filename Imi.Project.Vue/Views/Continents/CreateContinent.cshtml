<div id="app">
    <h2>{{pageTitle}}</h2>
    <div v-if="error" class="alert alert-danger" role="alert">
        {{userMessage}}
    </div>
    <div v-if="success" class="alert alert-success" role="alert">
        {{userMessage}}
    </div>

    <form v-on:submit.prevent="addContinent" enctype="multipart/form-data" class="col col-lg-5 mx-auto">
        <div class="form-group">
            <label>Naam</label>
            <input v-model="continentModel.name" class="form-control">
        </div>
        
        <div class="form-group">
            <label>Image</label>
            <input ref="image" type="file" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

</div>
<script src="/js/continents/addContinent.js"></script>