<button class="btn btn-warning" @onclick="OnAddClick">Maak nieuw dier aan</button>
<div class="row">
    @foreach (var item in AnimalListItems)
    {
        <div class="column">
            <div class="card" style="width: 18rem;">
                <img src="@item.Image" class="card-img-top" alt="@item.NameDutch">
                <div class="card-body">
                    <h3 class="card-title">@item.NameDutch</h3>
                    <h5 class="card-subtitle">@item.NameFamily</h5>
                    <div class="card-footer">
                        <button class="btn btn-warning" @onclick="e => OnEditClick.InvokeAsync(item)">Wijzigen</button>
                        <button class="btn btn-warning" @onclick="e => OnDeleteClick.InvokeAsync(item)">Verwijderen</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public AnimalListItem[] AnimalListItems { get; set; }
    [Parameter]
    public EventCallback OnAddClick { get; set; }
    [Parameter]
    public EventCallback<AnimalListItem> OnEditClick { get; set; }
    [Parameter]
    public EventCallback<AnimalListItem> OnDeleteClick { get; set; }
}
